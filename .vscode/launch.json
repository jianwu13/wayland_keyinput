{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Wayland Client (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/wayland_echo",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            
            // CORRECTED: This property should be 'internalConsole' or 'integratedTerminal'
            // Using 'integratedTerminal' is necessary for Wayland programs to display the window.
            // "console": "integratedTerminal", 
            
            "setupCommands": [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_wayland_client"
        }
    ]
}